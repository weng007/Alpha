@*<h2>WageTeachnician Edit</h2>*@
<script src="@Url.Content("~/Scripts/EditableGrid/paging.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/CUDS/WageTechnician/EditWageTechnician.js")" type="text/javascript"></script>
<div id="myModal">

    @using (Html.BeginForm())
    {
        <form>
            <div class="barattach-3">
                <ul class="form-style-1">
                    <li>
                        <label class="topictable">Technician</label>
                        <input type="text" id="txtTechName" name="txtTechName" class="TechName text-size140" />
                        <input type="hidden" id="hidTechID" />
                    </li>
                </ul>
                <ul class="form-style-1">
                    <li>
                        <label class="topictable">Position</label>
                        @*<select id="cmbPosition" name="cmbPosition" class="field-select-small-2"></select>*@
                        <select class="cmbPosition select-size50">
                            <option value="0">Sup</option>
                            <option value="1">F/M</option>
                            <option value="2">Tech</option>
                            <option value="3">Safety</option>
                        </select>
                    </li>
                </ul>
                <ul class="form-style-1">
                    <li>
                        <label class="topictable">JobDate</label>
                        <input type="text" id="dtFJobDate" class="field-divided" placeholder="วันที่รับเข้า" required />&nbsp;<input type="text" id="dtTJobDate" class="field-divided" placeholder="วันที่รับเข้า" required />
                    </li>
                </ul>
                <ul class="form-style-1">
                    <li>
                        <label class="topictable"></label>
                        <button type="button" class="btn btn-info-Search"><span class="glyphicon glyphicon-search"></span> Search</button>
                    </li>
                </ul>
            </div>
            
        </form>
    }
    </div>
<iframe id="iframeViewer" frameborder="0" height="600" width="600"></iframe>
@section ShowRptViewer
{
                <script>
                    $(document).ready(function () {
                        ReportValidationCheck();
                    });

                    function ReportValidationCheck() {
                        url = "../Reports/FormReport/RptWageTechnicianViewer.aspx";
                        var Rptiframe = document.getElementById("iframeViewer");
                        if (Rptiframe !== null) {
                            if (Rptiframe.src) {
                                Rptiframe.src = url;
                            }
                            else if (Rptiframe.contentWindow !== null && Rptiframe.contentWindow.location !== null) {
                                Rptiframe.contentWindow.location = url;
                            }
                            else {
                                Rptiframe.setAttribute('src', url);
                            }
                        }
                        return false;
                    }
                </script>
            }
