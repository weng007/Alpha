@{
    ViewBag.Title = "CreateWageTeachnician";
}

<script src="@Url.Content("~/Scripts/EditableGrid/paging.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/CUDS/WageTechnician/CreateWageTechnician.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<table>
    <tr>
        <td>
            @Html.ActionLink("WageTeachnician List", "IndexWageTeachnician")
        </td>
    </tr>
</table>
<div id="myModal">
    @using (Html.BeginForm())
    {
        <form>
            <ul class="form-style-1">
                <li>
                    <label>Name<span class="required">*</span></label>
                </li>
                <li>
                    <input type="text" id="txtFullName" name="field1" class="text-size170" disabled />
                </li>
                <br />
            </ul>

            <div class="grigbar">

                <table class="table table-striped">
                    <thead class="bgthead">
                        <tr>
                            <th rowspan="3" class="hidecolumn">ID</th>
                            <th rowspan="3" class="hidecolumn">JobID</th>
                            <th rowspan="3" class="hidecolumn">TechnicianID</th>
                            <th rowspan="3">No.</th>
                            <th rowspan="3">JobNo</th>
                            <th rowspan="3">Customer</th>
                            <th rowspan="3">Job site</th>
                            <th rowspan="3">DATE</th>
                            <th rowspan="3">DAY</th>
                            <th colspan="2">WORKING TIME</th>
                            <th colspan="4">NUMBER OF HOURS</th>
                            <th rowspan="3">Additionnal Wages (Baht)</th>
                            <th rowspan="3">Deduction(-)(Baht)</th>
                            <th rowspan="3">Remark</th>
                            <th rowspan="3">Location</th>
                            @*<th rowspan="3"></th>*@
                        </tr>
                        <tr>
                            <th rowspan="2">FROM</th>
                            <th rowspan="2">TO</th>
                            <th rowspan="2">TOTAL HOURS</th>
                            @*<th rowspan="2">Normal Hours</th>*@
                            <th colspan="3">Overtime</th>
                        </tr>
                        <tr>
                            <th>Normal(1.5)</th>
                            <th>Premium(2)</th>
                            <th>Special(3)</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <td colspan="7"></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>TOTAL</td>
                            <td>(WH3%)</td>
                        </tr>
                        <tr>
                            <td colspan="7">TOTAL (HRS)</td>
                            <td></td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="7">RATE (BAHT)</td>
                            <td></td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="7">AMOUNTS (BAHT)</td>
                            <td></td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                        </tr>
                        <tr>
                            <td colspan="7">TOTAL WAGES(BAHT)</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>-</td>
                        </tr>
                    </tfoot>
                    <tbody id="result"></tbody>
                </table>
            </div>
            <ul class="form-style-1">
                <li>
                    <button type="button" id="btnSave" class="btn btn-primary" onclick="ConfirmDialog('Create', 'WageTechnician', @Request.Params["id"])">Save</button>
                </li>
            </ul>
        </form>
    }
</div>
<script type="text/javascript">

    $(document).ready(function () {
        var input = window.location.href;
        var after = input.split('?')[1]
        var val = after.split('=');
        var Isview = val[2];
        GetData(@Request.Params["id"]);
        CheckAuthorization();
        ControlEnable(Isview);

    });
</script>
