$(document).ready(function () {
    var currentDate = new Date();
    var currentMonth = currentDate.getMonth() + 1;
    $('#calendar').addClass('table-responsive');
    //$('#calendar').attr("style", "width: 40%;  margin-bottom: 20px; float: left;");

