@{
    ViewBag.Title = "EditSecurityProfile";
}

<script src="@Url.Content("~/Scripts/CUDS/SecurityProfile/EditSecurityProfile.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<div id="container">
    @using (Html.BeginForm())
    {
        ////===================================================================CSS w3school
        <form>
            <ul class="form-style">
                <li>
                    <label>Profile<span class="required">*</span></label>
                    <input type="text" id="txtProfile" class="field-divided" placeholder="" autofocus/>
                </li>
                <li>
                    <label>First Page<span class="required">*</span></label>
                    <select id="cmbMenuMaster" class="field-divided" onchange="GetMenumasterDetail()" required></select>&nbsp;<select id="cmbMenuMasterDetail" class="field-divided" required></select>
                </li>
                <li>
                    <button type="button" id="btnSave" class="btn btn-primary marginbuttom-10 mgr10" onclick="Isvalidate('Update', 'SecurityProfile', @Request.Params["id"])">Save</button>
                    <button type="button" id="btnCancel" class="btn btn-danger marginbuttom-10" onclick="Redirect()">Cancel</button>
                </li>
            </ul>
            <br />
            <div class="table-responsive">
                <table class="table tbblue table-striped-blue">
                    <thead class="bgthead-blue">
                        <tr>
                            <th class="hidecolumn">No.</th>
                            <th class="hidecolumn">ID</th>
                            <th class="thblue">Menu</th>
                            <th class="thblue">View</th>
                            <th class="thblue">Insert</th>
                            <th class="thblue wraptext">Update</th>
                            <th class="thblue">Delete</th>
                        </tr>
                    </thead>
                    <tbody id="result"></tbody>
                </table>
                </div>
</form>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var input = window.location.href;
        var after = input.split('?')[1]
        var val = after.split('=');
        var ID = val[1];
        var Isview = val[2];
        GetMenumaster();
        GetMenumasterDetail();
        GetData(@Request.Params["id"]);
        ControlEnable(Isview);

    });
</script>