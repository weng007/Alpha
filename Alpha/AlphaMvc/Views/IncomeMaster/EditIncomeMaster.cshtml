@model AlphaMvc.Models.IncomeMaster
@{
    ViewBag.Title = "Edit";
}

@*<h2>Master Income Edit</h2>*@
<script src="@Url.Content("~/Scripts/CUDS/IncomeMaster/EditIncomeMaster.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
    @using (Html.BeginForm())
    {
        //===================================================================CSS w3school
        <form>
            <ul class="form-style">
                <li>
                    <label>Detail<span class="required">*</span></label>
                    <input type="text" id="txtDetail" class="field-divided" placeholder="" autofocus />
                </li>
                <li>
                    <label>Price List<span class="required">*</span></label>
                    <input type="text" id="txtPricelist" class="field-divided text-floatleft text-size120 text-right" onkeypress="return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 110" value="0" onblur="convertFloat('#txtPricelist')"/>&nbsp;<label>Baht</label>
                </li>
                <li>
                    <label>Sequence<span class="required">*</span></label>
                    <input type="text" id="txtSeq" class="field-divided text-size40 text-right" onkeypress="return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 110" value="1" />
                </li>
                <li>
                    <button type="button" id="btnSave" class="btn btn-primary" onclick="Isvalidate('Update', 'IncomeMaster', @Request.Params["id"])">Save</button>
                </li>
            </ul>

            <ul class="form-style">
                <li>
                    
                </li>
            </ul>
        </form>

    }
<script type="text/javascript">
    $(document).ready(function () {
        var input = window.location.href;
        var after = input.split('?')[1]
        var val = after.split('=');
        var Isview = val[2];
        GetData(@Request.Params["id"]);
        CheckAuthorization();
        ControlEnable(Isview);
    });
</script>

