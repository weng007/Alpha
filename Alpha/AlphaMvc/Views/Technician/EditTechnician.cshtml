                                                <tbody id="Card"></tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="grigbar">
                                            <table class="table table-striped">
                                                <thead class="bgthead">
                                                    <tr>
                                                        <th>No.</th>
                                                        <th>Skill</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="Skill"></tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="grigbar">
                                            <table class="table table-striped">
                                                <thead class="bgthead">
                                                    <tr>
                                                        <th>No.</th>
