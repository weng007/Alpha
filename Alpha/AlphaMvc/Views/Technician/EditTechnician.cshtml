</div>

<script type="text/javascript">
    $(document).ready(function () {

        GetData(@Request.Params["id"]);

        GetDataCard(@Request.Params["id"]);
        GetDataSkill(@Request.Params["id"]);
        GetDataFile(@Request.Params["id"]);

    });

</script>
