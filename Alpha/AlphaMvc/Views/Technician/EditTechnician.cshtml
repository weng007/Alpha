                </li>
                <br />
            </ul>
            @*//===================================================================CSS Jquery*@
            <table class="tabbar">
                <tr>
                    <td>
                        <div id="container">
                            <div id="parentHorizontalTab">
                                <ul class="resp-tabs-list hor_1">
                                    <li>Card</li>
                                    <li>Skill</li>
                                    <li>Attach File</li>
                                </ul>
                                <div class="resp-tabs-container hor_1">
                                    <div>
                                        <div class="grigbar">
                                            <table class="table table-striped">
                                                <thead class="bgthead">
                                                    <tr>
                                                        <th>No.</th>
                                                        <th>บริษัท</th>
                                                        <th>ประเภทบัตร</th>
