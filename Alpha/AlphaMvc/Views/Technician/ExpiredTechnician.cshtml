    $('#calendarManPower').on('click', '.fc-prev-button', function () {
        var currentMonth = $('#calendarManPower').fullCalendar('getDate');
        currentMonth = parseInt(currentMonth.format('M'));
        GetDetailManPower(currentMonth);
    });

});
