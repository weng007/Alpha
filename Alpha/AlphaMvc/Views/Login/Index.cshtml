@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Login.cshtml";
}

@*<h2>Index</h2>*@
@* ------------------------------------------- login -------------------------------------- *@
<link href="@Url.Content("https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("https://code.jquery.com/ui/1.12.1/jquery-ui.js")" type="text/javascript"></script>
<script src="@Url.Content("https://code.jquery.com/jquery-1.12.4.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/LoginStyle.css")" rel="stylesheet" type="text/css" />
<script language="javascript" type="text/javascript">
            $(document).ready(function () {
                $("#dialog").dialog({
                    modal: true
                });
            });
</script>
@* -------------------------------------------- form login ----------------------------------- *@

<form action="action_page.php" id="dialog">
        <div class="imgcontainer">
            <img src="@Url.Content("~/images/img_avatar2.png")" alt="Avatar" class="avatar"/>
        </div>

        <div class="container">
            <label><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="uname" required>
            <br />
            <label><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>
            <br />
            <button type="submit">@Html.ActionLink("Login", "Index", "Home")</button>
            <input type="checkbox" checked="checked"> Remember me
        </div>

        <div class="container">
            <button type="button" class="cancelbtn">Cancel</button>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
    </form>
@* -------------------------------------------- form login ----------------------------------- *@
