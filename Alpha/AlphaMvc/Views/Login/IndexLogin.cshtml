@{
    ViewBag.Title = "IndexLogin";
    Layout = "~/Views/Shared/Login.cshtml";
}

@*<h2>Index</h2>*@
@* ------------------------------------------- login -------------------------------------- *@
<link href="@Url.Content("~/Content/LoginStyle.css")" rel="stylesheet" type="text/css" />
@* -------------------------------------------- form login ----------------------------------- *@
<script src="@Url.Content("~/Scripts/CUDS/UserLogin/IndexUserLogin.js")" type="text/javascript"></script>
<form id="dialog" >
        <div class="imgcontainer">
            <img src="@Url.Content("~/images/img_avatar2.png")" alt="Avatar" class="avatar"/>
        </div>

        <div class="container">
            <label><b>Username</b></label>
            <input name="id" id="txtUserName" type="text" placeholder="UserName">
            <br />
            <label><b>Password</b></label>
            <input name="pass" id="txtpassword" type="password" placeholder="Password">
            <br />
            <button type="button" value="Login" onClick="pasuser()"/>Login

        </div>

        <div class="container">
            <button type="button" class="cancelbtn">Cancel</button>
            @*<span class="psw">Forgot <a href="#">password?</a></span>*@
        </div>
    </form>
    
@* -------------------------------------------- form login ----------------------------------- *@