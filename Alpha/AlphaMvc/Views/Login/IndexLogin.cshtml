@* ------------------------------------------- login -------------------------------------- *@
<link href="@Url.Content("~/Content/LoginStyle.css")" rel="stylesheet" type="text/css" />
@* -------------------------------------------- form login ----------------------------------- *@
@*<script src="@Url.Content("~/Scripts/CUDS/UserLogin/IndexUserLogin.js")" type="text/javascript"></script>*@
<form id="dialog" method="post">
        <div class="imgcontainer">
            <img src="@Url.Content("~/images/img_avatar2.png")" alt="Avatar" class="avatar"/>
        </div>

        <div class="container">
            <label><b>Username</b></label>
            <input type="text" id="txtUserName" placeholder="Enter Username" name="uname" required>
            <br />
            <label><b>Password</b></label>
            <input type="password" id="txtpassword" placeholder="Enter Password" name="psw" required>
            <br />
            <button type="submit" value="Login" id="UserLogin"></button>
            @*<button type="submit">@Html.ActionLink("Login", "Index", "Home")</button>*@
            <input type="checkbox" checked="checked"> Remember me
            
        </div>

        <div class="container">
            <button type="button" class="cancelbtn">Cancel</button>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
    </form>
    
