@model AlphaMvc.Models.ExpenseMaster
@{
    ViewBag.Title = "ExpenseMaster";
}

@*<h2>Master Expense Edit</h2>*@
<script src="@Url.Content("~/Scripts/CUDS/ExpenseMaster/EditExpenseMaster.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<style>
