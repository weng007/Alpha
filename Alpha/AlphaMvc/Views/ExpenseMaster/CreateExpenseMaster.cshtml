@model AlphaMvc.Models.ExpenseMaster
@{
    ViewBag.Title = "ExpenseMaster";
}

@*<h2>Master Expense Create</h2>*@
<script src="@Url.Content("~/Scripts/CUDS/ExpenseMaster/CreateExpenseMaster.js")" type="text/javascript"></script>
<!-- Modal -->
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

@using (Html.BeginForm())
{
    //===================================================================CSS w3school
    
        <form>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-6 col-sm-2 col-lg-2">
                        <div class="form-group">
                            <label for="cmbTypeWorking">Expense Group:</label>
                            <select id="cmbTypeWorking" class="form-control text-size140" required autofocus></select>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-5 col-lg-5">
                        <div class="form-group">
                            <label for="txtDetail">Detail:</label>
                            <input type="text" id="txtDetail" class="form-control text-size180" placeholder="" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-12 col-sm-5 col-lg-7 padleft0">
                        <div class="col-xs-6 col-md-6 col-sm-4 col-lg-2">
                            <div class="form-group">
                                <label for="txtPricelist">Price List:<span class="required">*</span></label>
                                <input type="text" id="txtPricelist" class="form-control text-size100 text-right" onkeypress="return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 110" value="0" onblur="convertFloat('#txtPricelist')" />
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-6 col-sm-1 col-lg-5">
                            <div class="form-group">
                                <label for="txtSerialNo">Sequence:<span class="required">*</span></label>
                                <input type="text" id="txtSeq" class="form-control text-size40 text-right" onkeypress="return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 110" value="1" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8 col-sm-5 col-lg-4 padleft0">
                        <div class="col-xs-3 col-sm-2 col-lg-2">
                            <div class="form-group">
                                <button type="button" class="btn btn-primary mgr10" onclick="Isvalidate('Create', 'ExpenseMaster', 0)">Save</button>
                            </div>
                        </div>
                        <div class="col-xs-4 col-sm-3 col-lg-3">
                            <div class="form-group">
                                <button type="button" id="btnCancel" class="btn btn-danger" onclick="Redirect()">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </form>

        }
        <script type="text/javascript">
            $(document).ready(function () {
                CheckAuthorization();
            });
        </script>
