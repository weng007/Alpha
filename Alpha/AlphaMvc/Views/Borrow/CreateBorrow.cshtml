@{
    ViewBag.Title = "CreateBorrow";
}

<h2>Borrow</h2>
<script src="@Url.Content("~/Scripts/CUDS/JobOrderBorrow/CreateJobOrderBorrow.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
    <!-- Modal -->
<div class="modal fade" id="productDialog" role="dialog">
    <div class="modal-dialog" style="margin-top: -300px;">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Product</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblCustomer" class="table table-striped table-hover">
                        <thead class="bgthead">
                            <tr>
                                <th class="Rowpointer">No.</th>
                                <th class="hidecolumn">ID</th>
                                <th class="Rowpointer">Serial</th>
                                <th class="Rowpointer">หมายเลขเครื่อง</th>
                                <th class="Rowpointer">ยี่ห้อ</th>
                                <th class="Rowpointer">ขนาด</th>
                                <th class="Rowpointer">รุ่น</th>
                            </tr>
                        </thead>
                        <tbody id="productBody"></tbody>
                    </table>
                </div>
                @*<ul class="pagination pagination-lg pager" id="myPager"></ul>*@
            </div>
        </div>

    </div>
</div>
<style>
    table {
        background: #fbfbf1;
        width: 335px;
    }
</style>

<div id="myModal">
    @using (Html.BeginForm())
    {
        <form>
            <ul class="form-style-1">
                <li>
                    <label>Serial <span class="required">*</span></label>
                    <input type="text" id="txtSerial" class="field-divided" placeholder="Serial" disabled />&nbsp;<a href="#" data-toggle="modal" data-target="#productDialog" onclick="BrowseProduct()">
                        <img src="@Url.Content("~/Images/search-engine.png")" class="btnimage" />
                    </a>
                    <input type="hidden" id="hidProductID" />
                </li>
                <li>
                    <label class="label-small">ยี่ห้อ</label>&nbsp;<label class="label-small-3">รุ่น</label>
                </li>
                <li>
                    <input type="text" id="txtBrand" name="field1" class="field-select-small" placeholder="ยี่ห้อ" />&nbsp;<input type="text" name="field2" id="txtModel" class="field-select-small" placeholder="รุ่น"/>
                </li>
                <li>
                    <label class="label-small">ขนาด</label>&nbsp;<label class="label-small-3">จำนวนที่ยืม</label>
                </li>
                <li>
                    <input type="text" id="txtSize" name="field1" class="field-select-small" placeholder="ขนาด" />&nbsp;<input type="text" name="field2" id="txtAmount" class="field-select-small" placeholder="จำนวน" />
                </li>
                
                <li>
                    <label>หมายเหตุ</label>
                    <textarea name="field5" id="txtRemark" class="field-long field-textarea"></textarea>
                </li>
                
            </ul>
            <ul class="form-style-3">
                <li>
                    <label>คืน:</label>
                </li>
                    <li>
                        <label class="label-small-2">ดี</label>&nbsp;<label class="label-small-2">หาย</label>&nbsp;<label class="label-small">ซ่อม</label>&nbsp;<label class="label-small-2">ชำรุด</label>
                    </li>
                    <li>
                        <input type="text" id="txtReturnGood" name="field6" class="field-select-small" placeholder="ดี" />&nbsp;<input type="text" name="field6" id="txtReturnLost" class="field-select-small" placeholder="หาย" />&nbsp;<input type="text" id="txtReturnRepair" name="field7" class="field-select-small" placeholder="ซ่อม" />&nbsp;<input type="text" id="txtReturnBad" name="field8" class="field-select-small" placeholder="ชำรุด" />
                    </li>
                <li>
                    <button type="button" class="btn btn-primary" onclick="ConfirmDialog('Create','JobOrderBorrow',0)">Save</button>
                </li>
             </ul>
</form>
    }
</div>
