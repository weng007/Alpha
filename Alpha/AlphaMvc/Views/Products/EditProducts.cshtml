                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "Trachnician")">
                                        <img src="@Url.Content("~/Images/delete.png")" />
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </li>
                <br />
            </ul>
        </form>
