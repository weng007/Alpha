@model AlphaMvc.Models.Product
@{
    ViewBag.Title = "EditProducts";
}

<script src="@Url.Content("~/Scripts/CUDS/Products/EditProducts.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<style>
    table {
        background: #fbfbf1;
        width: 335px;
    }
</style>
<table>
    <tr>
        <td>
            <div class="linkstyle">@Html.ActionLink("Products List", "IndexProducts")</div>
        </td>
    </tr>
</table>
<div id="myModal">
    @using (Html.BeginForm())
    {
        //===================================================================CSS w3school
        <form>
            <ul class="form-style-1">
                <li>
                    <label class="label-2" style="margin-right: 25%;">Serial Number <span class="required">*</span></label>&nbsp;<label class="label-2" style="margin-right: 10%;">หมายเลขเครื่อง<span class="required">*</span></label>
                </li>
                <li>
                    <input type="text" id="txtSerialNo" name="field1" class="field-divided" placeholder="Serial" autofocus required />&nbsp;<input type="text" id="txtMachineNo" name="field1" class="field-divided" placeholder="หมายเลขเครื่อง" required />
                </li>
                <li>
                    <label>ประเภทสินค้า</label>
                    <select id="cmbProductType" name="cmbProductType" class="field-divided"></select>
                </li>
                <li>
                    <label class="label-2" style="margin-right: 42%;">ยี่ห้อ<span class="required">*</span></label>&nbsp;<label class="label-2">ขนาด<span class="required">*</span></label>
                </li>
                <li>
                    <input type="text" id="txtBrand" name="field1" class="field-divided" placeholder="ยี่ห้อ" />&nbsp;<input type="text" id="txtSize" name="field2" class="field-select-small" placeholder="ขนาด" />
                </li>
                <li>
                    <label class="label-2" style="margin-right: 45%;">รุ่น<span class="required">*</span></label>&nbsp;<label class="label-2">อายุใช้งาน</label>
